{
    "name": "davidmintz/court-interpreters-office",
    "description": "web application for managing a busy US District Court interpreters office",
    "type": "project",
    "minimum-stability" :"dev",
    "prefer-stable" : true,
    "require": {
        "php" : "^7.2.10",
        "ext-mbstring" : "*",
        "ext-json" : "*",
        "ext-intl" : "*",
        "zendframework/zend-mvc": "^3.1",
        "zendframework/zend-form": "^2.12",
        "zendframework/zend-log": "^2.10",
        "doctrine/doctrine-orm-module": "^2.1",
        "zendframework/zend-session": "^2.8",
        "zendframework/zend-mail": "^2.10",
        "zendframework/zend-permissions-acl": "^2.7",
        "zendframework/zend-navigation": "^2.9",
        "zendframework/zend-mvc-plugin-flashmessenger": "^1.1",
        "zendframework/zend-i18n": "^2.9",
        "zendframework/zend-math": "^3.1",
        "zendframework/zend-json": "^3.1",
        "zendframework/zend-code": "^3.3",
        "zendframework/zend-crypt": "^3.3",
        "zfcampus/zf-development-mode": "^3.2"
    },
    "scripts" : {
        "zdt-on":  "sed -i -e 's/false/true/' config/autoload/toolbar.enabled.php",
        "zdt-off": "sed -i -e 's/true/false/' config/autoload/toolbar.enabled.php"
    },
    "require-dev": {
        "ext-dom": "*",
        "phpunit/phpunit": "^7.4",
        "doctrine/data-fixtures": "^1.3",
        "squizlabs/php_codesniffer": "^3.3",
        "zendframework/zend-test": "^3.2",
        "zendframework/zend-developer-tools": "^1.2"
    },

    "autoload": {
        "psr-4": {
            "InterpretersOffice\\": "module/InterpretersOffice/src/",
            "InterpretersOffice\\Admin\\": "module/Admin/src/",
            "InterpretersOffice\\Requests\\": "module/Requests/src/",
            "SDNY\\Vault\\": "module/Vault/src/",
            "InterpretersOffice\\Admin\\Notes\\": "module/Notes/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ApplicationTest\\": [
                "module/InterpretersOffice/test/",
                "module/Admin/test/",
                "module/Requests/test/",
                "module/Notes/test/"
            ],
            "SDNY\\Vault\\Test\\" : "module/Vault/test/",
            "Sandbox\\"  : "module/Sandbox/src"
        }
    },
    "authors": [
        {
            "name": "David Mintz",
            "email": "david@davidmintz.org"
        }
    ]
}
